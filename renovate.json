{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "runatlantis/atlantis",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG ATLANTIS_VERSION=\"?(?<currentValue>[^\"]+)\"?"
      ],
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "gruntwork-io/terragrunt",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG TG_VERSION=\"?(?<currentValue>[^\"]+)\"?"
      ],
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "m13253/terragrunt-atlantis-config",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG TAC_VERSION=\"?(?<currentValue>[^\"]+)\"?"
      ],
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "opentofu/opentofu",
      "fileMatch": [
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "ARG TOFU_VERSION=\"?(?<currentValue>[^\"]+)\"?"
      ],
      "versioningTemplate": "semver"
    }
  ],
  "dockerfile": {
    "fileMatch": [
      "(^|/)Dockerfile$"
    ]
  },
  "extends": [
    "config:recommended"
  ]
}
